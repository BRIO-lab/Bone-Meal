{
    "dataset": "dogs",
    "method": "fcn_segmentor",
    "data": {
      "image_tool": "cv2",
      "input_mode": "BGR",
      "num_classes": 2,
      "label_list": [0,1],
      "reduce_zero_label": false,
      "data_dir": "/home/zach/projects/Bone-Meal/HRFormer/seg/data/dogs",
      "workers": 4
    },
   "train": {
      "batch_size": 2,
      "data_transformer": {
        "size_mode": "fix_size",
        "input_size": [1024, 1024],
        "align_method": "only_pad",
        "pad_mode": "random"
      }
    },
    "val": {
      "batch_size": 2,
      "data_transformer": {
        "size_mode": "fix_size",
        "input_size": [1024, 1024],
        "align_method": "only_pad",
        "pad_mode": "random"
      }
    },
    "test": {
      "batch_size": 2,
      "mode": "ss_test",
      "data_transformer": {
        "size_mode": "fix_size",
        "input_size": [1024, 1024],
        "align_method": "only_pad",
        "pad_mode": "random"
      }
    },
    "train_trans": {
      "trans_seq": ["random_hflip", "random_brightness"],
      "random_brightness": {
        "ratio": 1.0,
        "shift_value": 10
      },
      "random_hflip": {
        "ratio": 0.5,
        "swap_pair": []
      }
    },
    "val_trans": {
      "trans_seq": ["resize"],
      "resize": {
        "min_side_length": 1024
      },
      "random_crop": {
        "ratio": 1.0,
        "crop_size": [1024, 1024],
        "method": "center",
        "allow_outside_center": false
      }
    },
    "normalize": {
      "div_value": 255.0,
      "mean_value": [0.485, 0.456, 0.406],
      "mean": [0.485, 0.456, 0.406],
      "std": [0.229, 0.224, 0.225]
    },
    "checkpoints": {
      "checkpoints_name": "fs_aspocnet_dogs_seg",
      "checkpoints_dir": "./checkpoints/dogs",
      "save_iters": 1000
    },
    "network":{
      "backbone": "hrnet48",
      "model_name": "hrnet_w48",
      "bn_type": "torchbn",
      "stride": 8,
      "factors": [[8, 8]],
      "loss_weights": {
        "aux_loss": 0.4,
        "seg_loss": 1.0
      }
    },
    "logging": {
      "logfile_level": "info",
      "stdout_level": "info",
      "log_file": "./log/ade20k/fs_aspocnet_dogs_seg.log",
      "log_format": "%(asctime)s %(levelname)-7s %(message)s",
      "rewrite": true
    },
    "lr": {
      "base_lr": 0.001,
      "metric": "iters",
      "lr_policy": "lambda_poly",
      "warm": {
        "warm_iters": 1500,
        "warm_ratio": 1e-6,
        "freeze_backbone": false
      },
      "step": {
        "gamma": 0.5,
        "step_size": 100
      }
    },
    "solver": {
      "display_iter": 10,
      "test_interval": 5000,
      "max_iters": 30000
    },
    "optim": {
      "optim_method": "sgd",
      "adam": {
        "betas": [0.9, 0.999],
        "eps": 1e-08,
        "weight_decay": 0.0001
      },
      "adamw": {
        "betas": [0.9, 0.999],
        "eps": 1e-08,
        "weight_decay": 0.01
      },
      "sgd":{
        "weight_decay": 0.0001,
        "momentum": 0.9,
        "nesterov": false
      }
    },
    "loss": {
      "loss_type": "fs_auxce_loss",
      "params": {
        "ce_reduction": "elementwise_mean",
        "ce_ignore_index": -1,
        "ohem_minkeep":100000,
        "ohem_thresh": 0.7
      }
    }
}
